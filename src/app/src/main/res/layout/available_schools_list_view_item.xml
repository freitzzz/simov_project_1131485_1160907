<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/available_schools_list_view_item_school_acronym_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorSchoolAcronym"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/available_schools_list_view_item_school_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/colorSchoolName"/>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.ippementa.ipem.view.preferences.UserPreferencesFragment"/>
</LinearLayout>