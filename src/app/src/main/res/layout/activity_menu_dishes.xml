<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.dish.MenuDishesActivity">

    <LinearLayout
        android:id="@+id/menu_dishes_header_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundHeaderLogo"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_dishes_header_back_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="5dp"
            android:src="@drawable/icon_arrow_left_black"
            android:scaleType="centerInside"
            />

        <ImageView
            android:id="@+id/menu_dishes_header_image_view"
            android:contentDescription="@string/ipp_ementa_header_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:maxHeight="60dp"
            app:srcCompat="@drawable/ipp_ementa_header_logo_transparent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/menu_dishes_header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menu_dishes_header_text"
        android:textColor="@android:color/black"
        android:background="@color/colorBackgroundHeaderText"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/menu_dishes_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>